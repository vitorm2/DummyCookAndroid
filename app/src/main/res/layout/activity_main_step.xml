<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToPadding="true"
    android:fillViewport="true">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainStepActivity">

        <TextView
            android:id="@+id/current_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="Aqui"
            android:textSize="15sp"/>


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/current_step"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:id="@+id/title_step_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressBar"
            android:layout_marginTop="20dp"
            android:text="Aqui"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="25sp"
            android:textColor="@color/corLaranja"/>

        <TextView
            android:id="@+id/text_step_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_step_main"
            android:text="Aqui"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/image_step_main"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_below="@id/text_step_main"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp" />


        <VideoView
            android:id="@+id/video_step_main"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_below="@id/text_step_main"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:clickable="true"
            />


        <ImageButton
            android:id="@+id/button_reset_timer"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/image_step_main"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_restart"
            android:background="@color/corLaranja"/>

        <ImageButton
            android:id="@+id/button_pause_timer"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/image_step_main"
            android:layout_toStartOf="@id/button_reset_timer"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/ic_pause"
            android:background="@color/corLaranja"
            />

        <ImageButton
            android:id="@+id/button_play_timer"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/image_step_main"
            android:layout_toStartOf="@id/button_pause_timer"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/ic_play"
            android:background="@color/corLaranja"/>

        <TextView
            android:id="@+id/text_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_step_main"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_previous"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_timer"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:text="Previous"
            android:layout_marginBottom="10dp"
            android:background="@color/corLaranja"
            android:textColor="@color/corBranca"/>

        <Button
            android:id="@+id/button_next"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_timer"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Next"
            android:background="@color/corLaranja"
            android:textColor="@color/corBranca"/>

    </RelativeLayout>

</ScrollView>