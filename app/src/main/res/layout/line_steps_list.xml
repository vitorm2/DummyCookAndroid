<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:padding="5dp">


    <View
        android:id="@+id/view"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/corLaranja" />


    <TextView
        android:id="@+id/text_numStepslist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"

        android:layout_marginStart="35dp"
        android:text="TextView"
        android:textColor="@color/corBranca"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_titleStepslist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_numStepslist"
        android:layout_alignParentStart="true"
        android:layout_marginStart="97dp"
        android:text="TextView"
        android:textColor="@color/corLaranja"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text_detailsSteplist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/text_titleStepslist"
        android:layout_below="@id/text_titleStepslist"
        android:text="TextView"
        android:textSize="11sp" />

</RelativeLayout>